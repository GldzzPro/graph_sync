# GraphSync Configuration

# Neo4j Database Configuration
neo4j:
  uri: "bolt://localhost:7687"  # Use this URI when running locally
  # uri: "bolt://neo4j:7687"  # Use this URI when running with docker-compose
  username: "neo4j"
  password: "password"

# Odoo Instances Configuration
instances:
  - name: "odoo"
    url: "http://localhost:8069"  # Odoo server URL with JSON-RPC endpoints
    db_name: "odoo"  # Database name
    # Authentication options (choose one):
    # Option 1: Username and password
    username: "admin"
    password: "admin"
    # Option 2: API key
    # api_key: "your-api-key"

# Logging Configuration
log_level: "INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL